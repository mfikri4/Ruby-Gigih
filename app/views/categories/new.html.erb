
  
    <div class="w-full mt-4">
      <div class="leading-loose">
        
        <%= form_with model: @category do |form|%>
          <%= csrf_meta_tags %>
            <div class="mt-2 my-6">
                <label class="block text-lg text-gray-600" for="title">Nama Kategori</label>
                <%= form.text_field :name, placeholder: "name" , class: 'w-1/3 px-3 py-2 text-gray-700 bg-gray-200 rounded'%>
            </div>
            <%= form.submit "Tambah Data", class: 'text-white bg-green-500 hover:bg-green-400 py-1 px-3 rounded'%>
            <a href="/categories" class="text-white bg-gray-700 hover:bg-gray-400 py-3 px-4 rounded"><i class="fas fa-chevron-circle-left"></i> Kembali</a>
        <% end %>
      </div>
    </div>